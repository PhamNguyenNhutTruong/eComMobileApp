<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_marginBottom="20dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <!--            Profile -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@drawable/background_bottom_corner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/profileContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="40dp"
                >
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi, Do Tuan"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="16dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/orange"
                    />
                <TextView
                    android:id="@+id/profileFeel"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/profileName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How do you feel?"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/profile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--            Search -->
            <EditText
                app:layout_constraintTop_toBottomOf="@id/profileContainer"
                android:elevation="1dp"
                android:id="@+id/search"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/edit_text_corner_100"
                android:layout_marginHorizontal="20dp"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/search_24"
                android:drawablePadding="10dp"
                android:fontFamily="@font/open_sans"
                android:hint="Search Coffee Here"
                android:padding="10dp"
                android:textSize="14sp"
                android:inputType="text" />
<!--            Banner -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/bannerContainer"
                android:background="@drawable/background_corner_50"
                android:elevation="3dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                >
                <ImageView
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/bannerImage"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/image_banner"
                    tools:ignore="ContentDescription" />
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free delivery"
                    android:id="@+id/bannerTitle"
                    android:textSize="16dp"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintStart_toEndOf="@id/bannerImage"
                    />

                <TextView
                    android:id="@+id/bannerTimeDuring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="May 2 - June 10"
                    android:textSize="13dp"
                    app:layout_constraintStart_toEndOf="@id/bannerImage"
                    app:layout_constraintTop_toBottomOf="@id/bannerTitle"
                    tools:ignore="TextSizeCheck" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_orange"
                    android:text="Order now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@id/bannerImage"
                    app:layout_constraintTop_toBottomOf="@id/bannerTimeDuring"
                    tools:ignore="TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            Categories -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                android:id="@+id/categoryContainer"
                app:layout_constraintTop_toBottomOf="@id/bannerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/categoryTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Categories"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <androidx.recyclerview.widget.RecyclerView
                    android:clipToPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/categoryTitle"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/recycler_view_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/list_category_item_horizontal" />
            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            Popular products-->
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/categoryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/productTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Popular"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See more"
                android:textSize="12sp"
                android:fontFamily="@font/open_sans"
                />
            <androidx.recyclerview.widget.RecyclerView
                app:layout_constraintTop_toBottomOf="@id/productTitle"
                android:id="@+id/recycler_view_popular_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/list_product_popular_item" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>