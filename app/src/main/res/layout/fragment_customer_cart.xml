<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.CustomerCartFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <TextView
               android:id="@+id/cartTitle"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="My cart"
               android:fontFamily="@font/open_sans_bold"
               android:textSize="@dimen/size_20"
               android:textColor="@color/orange"
               android:layout_marginTop="@dimen/margin_10"
               />
           <androidx.recyclerview.widget.RecyclerView
               android:layout_marginTop="@dimen/margin_20"
               app:layout_constraintTop_toBottomOf="@id/cartTitle"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/recycler_view_cart"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               tools:listitem="@layout/list_cart_item"
               />
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_marginTop="@dimen/margin_20"
               android:background="@drawable/background_corner_white_50"
               android:padding="@dimen/padding_10"
               android:layout_marginHorizontal="@dimen/margin_10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/recycler_view_cart"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:id="@+id/costContainer"
               android:layout_marginBottom="40dp"
               >
               <androidx.constraintlayout.widget.ConstraintLayout
                   app:layout_constraintTop_toTopOf="parent"
                   android:id="@+id/itemTotalContainer"
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:fontFamily="@font/open_sans_bold"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Items total"
                       android:textSize="16sp"
                       />
                   <TextView
                       android:fontFamily="@font/open_sans_semibold"
                       android:textSize="14sp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0 VND"
                       />
               </androidx.constraintlayout.widget.ConstraintLayout>
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/deliveryCost"
                   app:layout_constraintTop_toBottomOf="@id/itemTotalContainer"
                   android:layout_width="match_parent"
                   android:padding="10dp"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:textStyle="bold"
                       android:fontFamily="@font/open_sans_bold"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Delivery"
                       android:textSize="16sp"
                       />
                   <TextView
                       android:fontFamily="@font/open_sans_semibold"
                       android:textSize="14sp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0 VND"
                       />
               </androidx.constraintlayout.widget.ConstraintLayout>
               <androidx.constraintlayout.widget.ConstraintLayout
                   app:layout_constraintTop_toBottomOf="@id/deliveryCost"
                   android:id="@+id/totalContainer"
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <TextView
                       android:textStyle="bold"
                       android:fontFamily="@font/open_sans_bold"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Total"
                       android:textSize="16sp"
                       />
                   <TextView
                       android:fontFamily="@font/open_sans_semibold"
                       android:textSize="14sp"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0 VND"
                       />
               </androidx.constraintlayout.widget.ConstraintLayout>
           </androidx.constraintlayout.widget.ConstraintLayout>
           <Button
               app:layout_constraintTop_toBottomOf="@id/costContainer"
               android:id="@+id/checkoutButton"
               android:fontFamily="@font/open_sans_bold"
               android:textSize="16sp"
               android:textColor="@color/white"
               android:background="@drawable/button_orange_corner_100"
               android:layout_marginTop="20dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Checkout"
               android:textAllCaps="false"
               android:layout_marginHorizontal="@dimen/margin_20"
               />
           <com.paypal.checkout.paymentbutton.PayPalButton
               android:id="@+id/payPalButton"
               app:paypal_button_color="silver"
               app:paypal_button_label="pay"
               app:paypal_button_shape="rectangle"
               app:paypal_button_size="large"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/checkoutButton"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginHorizontal="@dimen/margin_20"
               android:layout_marginVertical="@dimen/margin_20"
               android:background="@drawable/button_orange_corner_100"
               />
       </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>